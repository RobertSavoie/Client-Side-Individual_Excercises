
<h1 class="mb-3">Contact List</h1>

<div class="row">
    <div class="row">
        <div class="col">

            <a href="/add" id="AddBtn" class="btn btn-primary mb-1">
                        <i class="fas fa-plus fa-sm"></i> Add Contact</a>

            <table class="table table-striped table-boarded table-hover">
                <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Contact Number</th>
                    <th scope="col">Email Address</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody id="contactList">
                <% for(let count=0; count < contacts.length; count++) {%>
                    <tr>
                        <th scope="row" class="text-center"><% count + 1 %></th>
                        <td><%= contacts[count].DisplayName %></td>
                        <td><%= contacts[count].ContactNumber %></td>
                        <td><%= contacts[count].EmailAddress %></td>
                        <td class="text-center">
                            <a href="/edit/<%= contacts[count]._id %>" class="btn btn-primary btn-sm edit">
                                <i class="fa-solid fa-edit fa-sm"></i> Edit
                            </a>
                        </td>
                        <td>
                            <a href="/delete/<%= contacts[count]._id %>" class="btn btn-danger btn-sm delete">
                                <i class="fa-regular fa-trash-alt fa-sm"></i> Delete
                            </a>
                        </td>
                    </tr>
                <% } %>

                </tbody>
            </table>
        </div>
    </div>
</div>